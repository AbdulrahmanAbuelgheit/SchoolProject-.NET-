@model List<Student>
<a class="btn btn-primary" asp-area="" asp-controller="Student" asp-action="Create">Add New Student</a>

<br />
    <table>
    <tr>
        <th>
            Student Name
        </th>
        <th>
            Student Age
        </th>
        <th>
            Photo
        </th>
        <th>
            Delete
        </th>
    </tr>
    @foreach(Student student in Model )
    {
        <tr>
            <td>
                @student.StudentName
            </td>
            <td>
                @student.StudentAge
            </td>
            <td>
                <img src="/StudentPhotos/@student.PhotonName" width="60" height="60" />
            </td>
            <td>
                <a href="/Student/Delete/@student.StudentId">Delete @student.StudentName</a>
            </td>
        </tr>
    }
</table>

