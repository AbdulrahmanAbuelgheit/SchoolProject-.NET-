@model List<Teacher>

<div class="container">
    <form action="Create" method="post">
        <div class="row">
            <div class="col-25">
                <label for="fname">Course Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="CourseName" name="CourseName" placeholder="Enter the name of course ..." maxlength="10" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="lname">Course Capacity</label>
            </div>
            <div class="col-75">
                <input type="number" id="CourseCapacity" name="CourseCapacity"  max="25" min="0"/>
            </div>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="Teacher">Select Teacher</label>
            </div>
            <div class="col-75">
                <select id="TeacherID" name="TeacherId">
                    @foreach(Teacher teacher in Model)
                    {
                  <option value="@teacher.TeacherId">@teacher.TeacherName</option>
                    }
                </select>
            </div>

        </div>


        <div class="row">
            <input type="submit" value="Save" />
        </div>
    </form>
</div>
